let gobackfunc = function(){
  console.log("clicked")
  let latDiv = document.getElementById("latitude");
  let longDiv = document.getElementById("longitude");
  let cb = document.getElementById("fgb");
  latDiv.innerHTML = "";
  longDiv.innerHTML = "";
